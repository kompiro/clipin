<body>
  <% if content_for?(:header) %>
    <%= yield(:header) %>
  <% else %>
    <div class="navbar navbar-fixed-top" id="header">
      <div class="navbar-inner">
        <div class="container">
          <ul class="nav">
            <li><a class="brand" href="#">Clipin</a></li>
            <li><a href="#new">New</a><li>
            <li><a href="#extension">Chrome Extension</a></li>
          </ul>
          <ul class="nav pull-right">
            <li><a href='/logout' class='pull-right'>Logout</a></li>
          </ul>
          <form class="navbar-search pull-right">
            <input type="text" class="search-query" placeholder="Search" />
            <span class="search-icon">
              <i class="icon-search" tabindex="0"></i>
            </span>
          </form>
        </div>
      </div>
    </div><!-- /header -->
  <% end %>
  <div id="wrap">
  <% if content_for?(:content) %>
    <%= yield(:content) %>
  <% else %>
  <%= yield %>
    <div class="container-fluid">
      <div class="row-fluid">
        <div class="span3">
          <ul class="nav nav-list affix well well-small" id="menu">
          </ul>
        </div>
        <div class="span9">
          <% if flash[:success] %>
            <div class="alert alert-success fade in">
              <a href="#" class="close" data-dismiss="alert">×</a>
              <%= flash[:success] %>
            </div>
          <% end %>
          <% if flash[:notice] %>
            <div class="alert alert-error fade in">
              <a href="#" class="close" data-dismiss="alert">×</a>
              <%= flash[:notice] %>
            </div>
          <% end %>
          <% if flash[:error] %>
            <div class="alert alert-error fade in">
              <a href="#" class="close" data-dismiss="alert">×</a>
              <%= flash[:error] %>
            </div>
          <% end %>
          <div id="page"></div>
        </div>
      </div>
    </div>
    <div id="push"></div>
<% end %>
<footer class="footer">
<div class="container">
  <p class="pull-right">
