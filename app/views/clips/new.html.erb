<% content_for :header do %>
  <h1>New clip</h1>
<% end %>

<%= form_for(@clip) do |f| %>
  <% if @clip.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@clip.errors.count, "error") %> prohibited this clip from being saved:</h2>

      <ul>
      <% @clip.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div data-role="fieldcontain">
    <%= f.label :url,'URL' %><br />
    <%= f.text_field :url %>
  </div>
  <div class="actions">
    <div data-role="ui-grid-a">
      <div class="ui-block-a"><%= link_to 'Back', clips_path,'data-role' => 'button' %></div>
      <div class="ui-block-b"><%= f.submit 'data-theme' => 'b'%></div>
    </div>
  </div>
<% end %>

